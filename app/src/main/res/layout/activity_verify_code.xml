<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SigninActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/screen2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_weight="1"
            android:src="@drawable/back_arrow"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_weight="5"
            android:fontFamily="@font/galdeano"
            android:text="Verify your code"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify your number"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/orange_700"
            android:fontFamily="@font/galdeano"/>

        <TextView
            android:id="@+id/textfornumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter the verification code\n send to your given number "
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:lineHeight="20dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">


        <com.chaos.view.PinView
            android:id="@+id/et_otp"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:cursorVisible="true"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:itemBackground="@android:color/transparent"
            android:singleLine="true"
            android:textColor="@color/orange_700"
            android:textSize="20dp"
            app:cursorColor="@color/white"
            app:cursorWidth="2dp"
            app:itemCount="6"
            android:fontFamily="@font/galdeano"
            app:itemHeight="50dp"
            app:itemSpacing="10dp"
            app:itemWidth="50dp"
            app:itemRadius="10dp"
            app:lineColor="@color/orange_700"
            app:lineWidth="2dp"
            app:viewType="rectangle" />


    </LinearLayout>


    <Button
        android:id="@+id/continuebtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/btnbackground"
        android:layout_marginHorizontal="30dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="@font/galdeano"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/have_not_received_it_yet_resend"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal" />


    </LinearLayout>